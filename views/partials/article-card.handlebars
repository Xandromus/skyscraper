<div class="card">
    <img class="card-img-top" src="{{this.imageLink}}" alt="{{this.title}}">
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{this.link}}" target="_blank">{{this.title}}</a>
        </h5>
        <p class="card-text">{{this.summary}}</p>
        <button class="btn btn-primary save"><i class="fa fa-floppy-o"></i> Save article</button>
    </div>
</div>